extends ../layout

block content
  .page-header
    h3 Sign up
  form(method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    label(for='name') Name
      input(type='text', name='name', id='name', placeholder='Email', autofocus, required)
    label(for='username') username
      input(type='text', name='username', id='username', placeholder='Email', autofocus, required)
    label(for='password') Password
      input(type='password', name='password', id='password', placeholder='Password', required)
    button.btn.btn-success(type='submit')
      | Signup
